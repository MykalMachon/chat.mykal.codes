{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm run build",
    "watchPatterns": ["/packages/webapp/**"]
  },
  "deploy": {
    "startCommand": "npm run start",
    "sleepApplication": true,
    "restartPolicyType": "ON_FAILURE"
  }
}